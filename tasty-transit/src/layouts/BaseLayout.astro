---
interface Props {
  title?: string;
  description?: string;
}

const {
  title = 'Collection',
  description = 'A curated collection of coins, jewelry, rings, cylinder seals, and small antiques.'
} = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  <body class="min-h-screen flex flex-col">
    <header class="sticky top-0 z-50 bg-cream/95 backdrop-blur-sm border-b border-charcoal/5">
      <nav class="container-narrow py-4 flex items-center justify-between">
        <a href={import.meta.env.BASE_URL} class="font-serif text-2xl tracking-wide hover:text-gold transition-colors">
          Collection
        </a>
        <div class="flex items-center gap-6 md:gap-8">
          <a href={`${import.meta.env.BASE_URL}/collection`} class="link-subtle text-sm uppercase tracking-widest">Browse</a>
          <a href={`${import.meta.env.BASE_URL}/timeline`} class="link-subtle text-sm uppercase tracking-widest">Timeline</a>
          <a href={`${import.meta.env.BASE_URL}/about`} class="link-subtle text-sm uppercase tracking-widest">About</a>
          <a href={`${import.meta.env.BASE_URL}/search`} class="link-subtle text-sm uppercase tracking-widest flex items-center gap-1" aria-label="Search">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
            </svg>
            <span class="hidden md:inline">Search</span>
          </a>
        </div>
      </nav>
    </header>

    <main class="flex-1">
      <slot />
    </main>

    <footer class="border-t border-charcoal/5 mt-20">
      <div class="container-narrow py-12 text-center">
        <p class="text-sm text-charcoal/50">
          A personal collection of historical artifacts
        </p>
      </div>
    </footer>
  </body>
</html>

<style is:global>
  @import '../styles/global.css';
</style>
