---
import BaseLayout from '../layouts/BaseLayout.astro';
import Search from '../components/Search.astro';
---

<BaseLayout title="Search | Archive">
  <section class="relative py-16 min-h-screen">

    <div class="container-narrow relative">
      <div class="mb-8">
        <p class="font-mono text-xs uppercase tracking-[0.2em] text-accent mb-3">
          // Search Index
        </p>
        <h1 class="text-4xl md:text-5xl text-text mb-4">Search</h1>
        <p class="text-text-muted text-lg">
          Find items by name, description, material, origin, or any other detail.
        </p>
      </div>

      <Search />
    </div>
  </section>
</BaseLayout>

<style>
  @import '@pagefind/default-ui/css/ui.css';
</style>
