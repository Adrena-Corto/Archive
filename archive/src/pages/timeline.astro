---
import BaseLayout from '../layouts/BaseLayout.astro';
import Timeline from '../components/timeline/Timeline.astro';
---

<BaseLayout title="Timeline | Archive">
  <section class="relative py-16 min-h-screen">
    <div class="container-narrow relative">
      <div class="mb-8">
        <p class="font-mono text-xs uppercase tracking-[0.2em] text-accent mb-3">
          // Temporal Index
        </p>
        <h1 class="text-4xl md:text-5xl text-text mb-4">Timeline</h1>
        <p class="text-text-muted text-lg mb-2">
          Explore the collection through the ages.
        </p>
        <p class="text-text-dim text-sm font-mono">
          Scroll to zoom · Drag to pan · Click items to view
        </p>
      </div>

      <Timeline />

      <div class="mt-8 flex flex-wrap gap-6 text-sm font-mono">
        <div class="flex items-center gap-2">
          <div class="w-2.5 h-2.5 rotate-45 bg-accent shadow-glow-cyan"></div>
          <span class="text-text-dim">Collection items</span>
        </div>
        <div class="flex items-center gap-2">
          <div class="w-3 h-0.5 bg-gold shadow-[0_0_8px_rgba(251,191,36,0.3)]"></div>
          <span class="text-text-dim">Historical landmarks</span>
        </div>
        <div class="flex items-center gap-2">
          <div class="w-0.5 h-3 bg-purple-500 shadow-[0_0_8px_rgba(168,85,247,0.3)]"></div>
          <span class="text-text-dim">Notable people</span>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
