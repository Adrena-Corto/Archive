---
import { ViewTransitions } from 'astro:transitions';

interface Props {
  title?: string;
  description?: string;
  structuredData?: object;
}

const {
  title = 'Collection',
  description = 'A curated collection of coins, jewelry, rings, cylinder seals, and small antiques.',
  structuredData
} = Astro.props;

const defaultStructuredData = {
  "@context": "https://schema.org",
  "@type": "CollectionPage",
  "name": "The Archive",
  "description": description,
  "url": Astro.url.href
};

const pathname = Astro.url.pathname;
const base = import.meta.env.BASE_URL;

function url(path: string): string {
  return `${base}${path}`.replace(/\/+/g, '/');
}

function isActive(path: string): boolean {
  const fullPath = url(path);
  return pathname === fullPath || pathname === fullPath + '/';
}
---

<!DOCTYPE html>
<html lang="en" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="theme-color" content="#0a0a0f" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <style set:html={`
      @font-face {
        font-family: 'Space Grotesk';
        font-style: normal;
        font-weight: 300 700;
        font-display: swap;
        src: url('${base}/fonts/space-grotesk-variable.woff2') format('woff2');
      }
      @font-face {
        font-family: 'JetBrains Mono';
        font-style: normal;
        font-weight: 400;
        font-display: swap;
        src: url('${base}/fonts/JetBrainsMono-Regular.woff2') format('woff2');
      }
      @font-face {
        font-family: 'Noto Sans Cuneiform';
        font-style: normal;
        font-weight: 400;
        font-display: swap;
        src: url('${base}/fonts/noto-sans-cuneiform.woff2') format('woff2');
      }
      @font-face {
        font-family: 'Noto Sans Egyptian Hieroglyphs';
        font-style: normal;
        font-weight: 400;
        font-display: swap;
        src: url('${base}/fonts/noto-sans-egyptian-hieroglyphs.woff2') format('woff2');
      }
    `} />
    <title>{title}</title>
    <script type="application/ld+json" set:html={JSON.stringify(structuredData || defaultStructuredData)} />
    <ViewTransitions />
  </head>
  <body class="min-h-screen flex flex-col bg-void">
    <!-- Skip to main content link for accessibility -->
    <a href="#main-content" class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 focus:z-[100] focus:bg-accent focus:text-void focus:px-4 focus:py-2 focus:rounded focus:font-mono focus:text-sm">
      Skip to content
    </a>

    <!-- Preload font glyphs for matrix effect (hidden) -->
    <div aria-hidden="true" style="position:absolute;left:-9999px;font-size:1px;">
      <span style="font-family:'Noto Sans Cuneiform'">ğ’€€ğ’€ğ’€‚ğ’€ƒğ’€„ğ’€…ğ’€ğ’ğ’‚ğ’ƒğ’‚€ğ’‚ğ’ƒ¸ğ’„€ğ’„ğ’„‚ğ’…€ğ’…ğ’†€ğ’†ğ’‡€ğ’‡</span>
      <span style="font-family:'Noto Sans Egyptian Hieroglyphs'">ğ“€€ğ“€ğ“€‚ğ“€ƒğ“€ğ“ğ“‚ğ“ƒğ“‚€ğ“‚ğ“‚‚ğ“ƒ€ğ“ƒğ“ƒ‚ğ“„€ğ“„ğ“…€ğ“…ğ“†€ğ“†ğ“‡€ğ“‡ğ“ˆ€ğ“ˆğ“‰€ğ“Š€ğ“‹€ğ“Œ€ğ“€ğ“€ğ“€</span>
    </div>
    <!-- Matrix background effect -->
    <canvas id="matrix-bg" aria-hidden="true"></canvas>

    <!-- Navigation progress bar -->
    <div
      id="nav-progress"
      class="fixed top-0 left-0 h-0.5 bg-gradient-to-r from-accent to-cyan-300 z-[100] opacity-0"
      style="width: 0%; transition: width 400ms cubic-bezier(0.4, 0, 0.2, 1), opacity 200ms ease;"
    ></div>

    <div x-data="{ mobileMenuOpen: false }" :style="mobileMenuOpen ? 'z-index: 9999' : ''" class="relative">
      <header class="sticky top-0 z-50 bg-void/80 backdrop-blur-xl border-b border-white/5" transition:name="header" transition:animate="none">
        <nav class="container-narrow py-4 flex items-center justify-between">
          <a href={url('/')} class="font-mono text-lg tracking-wider text-text hover:text-accent transition-all duration-300 hover:drop-shadow-[0_0_8px_rgba(34,211,238,0.5)]">
            <span class="font-cuneiform text-accent" aria-hidden="true">ğ’ƒ¸ğ’€</span> ARCHIVE
          </a>

          <!-- Desktop Navigation -->
          <div class="hidden md:flex items-center gap-6">
            <a
              href={url('/collection')}
              class:list={["nav-link font-mono text-xs uppercase tracking-widest", isActive('/collection') && "nav-link-active"]}
              aria-current={isActive('/collection') ? 'page' : undefined}
            >Browse</a>
            <a
              href={url('/timeline')}
              class:list={["nav-link font-mono text-xs uppercase tracking-widest", isActive('/timeline') && "nav-link-active"]}
              aria-current={isActive('/timeline') ? 'page' : undefined}
            >Timeline</a>
            <a
              href={url('/about')}
              class:list={["nav-link font-mono text-xs uppercase tracking-widest", isActive('/about') && "nav-link-active"]}
              aria-current={isActive('/about') ? 'page' : undefined}
            >About</a>
            <a
              href={url('/search')}
              class:list={["nav-link font-mono text-xs uppercase tracking-widest flex items-center gap-1.5", isActive('/search') && "nav-link-active"]}
              aria-label="Search"
              aria-current={isActive('/search') ? 'page' : undefined}
            >
              <svg xmlns="http://www.w3.org/2000/svg" class="h-3.5 w-3.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
              </svg>
              <span>Search</span>
            </a>
          </div>

          <!-- Mobile Menu Button -->
          <button
            @click="mobileMenuOpen = !mobileMenuOpen"
            class="md:hidden p-2 text-text-muted hover:text-accent transition-colors"
            :aria-expanded="mobileMenuOpen"
            aria-label="Toggle navigation menu"
          >
            <svg x-show="!mobileMenuOpen" xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M4 6h16M4 12h16M4 18h16" />
            </svg>
            <svg x-show="mobileMenuOpen" x-cloak xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
            </svg>
          </button>
        </nav>
      </header>

      <!-- Mobile Navigation Menu - Outside header for proper z-index stacking -->
      <div
        x-show="mobileMenuOpen"
        x-cloak
        x-transition:enter="transition ease-out duration-200"
        x-transition:enter-start="opacity-0"
        x-transition:enter-end="opacity-100"
        x-transition:leave="transition ease-in duration-150"
        x-transition:leave-start="opacity-100"
        x-transition:leave-end="opacity-0"
        class="fixed inset-0 top-[57px] z-[9999] md:hidden"
        style="background-color: #0a0a0f;"
        @click="mobileMenuOpen = false"
      >
        <!-- Menu panel -->
        <div
          class="border-b border-white/10"
          style="background-color: #12121a;"
          @click.stop
        >
          <div class="container-narrow py-6 flex flex-col gap-2">
            <a
              href={url('/collection')}
              @click="mobileMenuOpen = false"
              class:list={["mobile-nav-link font-mono text-sm uppercase tracking-widest py-3", isActive('/collection') && "text-accent border-accent"]}
              aria-current={isActive('/collection') ? 'page' : undefined}
            >
              <span class="text-accent mr-2">></span> Browse Collection
            </a>
            <a
              href={url('/timeline')}
              @click="mobileMenuOpen = false"
              class:list={["mobile-nav-link font-mono text-sm uppercase tracking-widest py-3", isActive('/timeline') && "text-accent border-accent"]}
              aria-current={isActive('/timeline') ? 'page' : undefined}
            >
              <span class="text-accent mr-2">></span> Timeline
            </a>
            <a
              href={url('/about')}
              @click="mobileMenuOpen = false"
              class:list={["mobile-nav-link font-mono text-sm uppercase tracking-widest py-3", isActive('/about') && "text-accent border-accent"]}
              aria-current={isActive('/about') ? 'page' : undefined}
            >
              <span class="text-accent mr-2">></span> About
            </a>
            <a
              href={url('/search')}
              @click="mobileMenuOpen = false"
              class:list={["mobile-nav-link font-mono text-sm uppercase tracking-widest py-3 flex items-center", isActive('/search') && "text-accent border-accent"]}
              aria-current={isActive('/search') ? 'page' : undefined}
            >
              <span class="text-accent mr-2">></span>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
              </svg>
              Search
            </a>
          </div>
        </div>
      </div>
    </div>

    <main id="main-content" class="flex-1 relative">
      <div class="absolute inset-0 bg-gradient-to-b from-surface/30 to-transparent pointer-events-none" />
      <slot />
    </main>

    <footer>
      <div class="container-narrow py-8 flex flex-col md:flex-row items-center justify-between gap-4">
        <p class="font-mono text-xs text-text-dim tracking-wide">
          <span class="text-accent">></span> Personal Collection Display
        </p>
        <p class="font-mono text-xs text-text-dim">
          Hong Kong, {new Date().getFullYear()}
        </p>
      </div>
    </footer>

    <script>
      // Navigation progress bar for View Transitions
      document.addEventListener('astro:before-preparation', () => {
        const bar = document.getElementById('nav-progress');
        if (bar) {
          bar.style.opacity = '1';
          bar.style.width = '25%';
        }
      });

      document.addEventListener('astro:after-preparation', () => {
        const bar = document.getElementById('nav-progress');
        if (bar) {
          bar.style.width = '60%';
        }
      });

      document.addEventListener('astro:before-swap', () => {
        const bar = document.getElementById('nav-progress');
        if (bar) {
          bar.style.width = '85%';
        }
      });

      document.addEventListener('astro:page-load', () => {
        const bar = document.getElementById('nav-progress');
        if (bar) {
          bar.style.width = '100%';
          setTimeout(() => {
            bar.style.opacity = '0';
            setTimeout(() => {
              bar.style.width = '0%';
            }, 200);
          }, 150);
        }
      });
    </script>

    <script>
      import { initMatrixEffect } from '../scripts/matrix-effect';
      initMatrixEffect();
    </script>
  </body>
</html>

<style is:global>
  @import '../styles/global.css';
</style>
