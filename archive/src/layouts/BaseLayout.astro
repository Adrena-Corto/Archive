---
interface Props {
  title?: string;
  description?: string;
}

const {
  title = 'Collection',
  description = 'A curated collection of coins, jewelry, rings, cylinder seals, and small antiques.'
} = Astro.props;

const pathname = Astro.url.pathname;
const base = import.meta.env.BASE_URL;

function isActive(path: string): boolean {
  const fullPath = `${base}${path}`.replace(/\/+/g, '/');
  return pathname === fullPath || pathname === fullPath + '/';
}
---

<!DOCTYPE html>
<html lang="en" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="theme-color" content="#0a0a0f" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+Cuneiform&display=swap" rel="stylesheet" />
    <title>{title}</title>
  </head>
  <body class="min-h-screen flex flex-col bg-void">
    <header class="sticky top-0 z-50 bg-void/80 backdrop-blur-xl border-b border-white/5">
      <nav class="container-narrow py-4 flex items-center justify-between" x-data="{ mobileMenuOpen: false }">
        <a href={import.meta.env.BASE_URL} class="font-mono text-lg tracking-wider text-text hover:text-accent transition-all duration-300 hover:drop-shadow-[0_0_8px_rgba(34,211,238,0.5)]">
          <span class="font-cuneiform text-accent">íÉ∏íÅÄ</span> ARCHIVE
        </a>

        <!-- Desktop Navigation -->
        <div class="hidden md:flex items-center gap-6">
          <a
            href={`${import.meta.env.BASE_URL}/collection`}
            class:list={["nav-link font-mono text-xs uppercase tracking-widest", isActive('/collection') && "nav-link-active"]}
            aria-current={isActive('/collection') ? 'page' : undefined}
          >Browse</a>
          <a
            href={`${import.meta.env.BASE_URL}/timeline`}
            class:list={["nav-link font-mono text-xs uppercase tracking-widest", isActive('/timeline') && "nav-link-active"]}
            aria-current={isActive('/timeline') ? 'page' : undefined}
          >Timeline</a>
          <a
            href={`${import.meta.env.BASE_URL}/about`}
            class:list={["nav-link font-mono text-xs uppercase tracking-widest", isActive('/about') && "nav-link-active"]}
            aria-current={isActive('/about') ? 'page' : undefined}
          >About</a>
          <a
            href={`${import.meta.env.BASE_URL}/search`}
            class:list={["nav-link font-mono text-xs uppercase tracking-widest flex items-center gap-1.5", isActive('/search') && "nav-link-active"]}
            aria-label="Search"
            aria-current={isActive('/search') ? 'page' : undefined}
          >
            <svg xmlns="http://www.w3.org/2000/svg" class="h-3.5 w-3.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
            </svg>
            <span>Search</span>
          </a>
        </div>

        <!-- Mobile Menu Button -->
        <button
          @click="mobileMenuOpen = !mobileMenuOpen"
          class="md:hidden p-2 text-text-muted hover:text-accent transition-colors"
          :aria-expanded="mobileMenuOpen"
          aria-label="Toggle navigation menu"
        >
          <svg x-show="!mobileMenuOpen" xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
          <svg x-show="mobileMenuOpen" x-cloak xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>

        <!-- Mobile Navigation Menu -->
        <div
          x-show="mobileMenuOpen"
          x-cloak
          x-transition:enter="transition ease-out duration-200"
          x-transition:enter-start="opacity-0 -translate-y-2"
          x-transition:enter-end="opacity-100 translate-y-0"
          x-transition:leave="transition ease-in duration-150"
          x-transition:leave-start="opacity-100 translate-y-0"
          x-transition:leave-end="opacity-0 -translate-y-2"
          @click.away="mobileMenuOpen = false"
          class="absolute top-full left-0 right-0 bg-surface/95 backdrop-blur-xl border-b border-white/10 md:hidden"
        >
          <div class="container-narrow py-4 flex flex-col gap-4">
            <a
              href={`${import.meta.env.BASE_URL}/collection`}
              class:list={["mobile-nav-link font-mono text-sm uppercase tracking-widest py-2", isActive('/collection') && "text-accent"]}
              aria-current={isActive('/collection') ? 'page' : undefined}
            >
              <span class="text-accent mr-2">></span> Browse Collection
            </a>
            <a
              href={`${import.meta.env.BASE_URL}/timeline`}
              class:list={["mobile-nav-link font-mono text-sm uppercase tracking-widest py-2", isActive('/timeline') && "text-accent"]}
              aria-current={isActive('/timeline') ? 'page' : undefined}
            >
              <span class="text-accent mr-2">></span> Timeline
            </a>
            <a
              href={`${import.meta.env.BASE_URL}/about`}
              class:list={["mobile-nav-link font-mono text-sm uppercase tracking-widest py-2", isActive('/about') && "text-accent"]}
              aria-current={isActive('/about') ? 'page' : undefined}
            >
              <span class="text-accent mr-2">></span> About
            </a>
            <a
              href={`${import.meta.env.BASE_URL}/search`}
              class:list={["mobile-nav-link font-mono text-sm uppercase tracking-widest py-2 flex items-center gap-2", isActive('/search') && "text-accent"]}
              aria-current={isActive('/search') ? 'page' : undefined}
            >
              <span class="text-accent mr-2">></span>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
              </svg>
              Search
            </a>
          </div>
        </div>
      </nav>
    </header>

    <main class="flex-1">
      <slot />
    </main>

    <footer class="border-t border-white/5 mt-20">
      <div class="container-narrow py-8 flex flex-col md:flex-row items-center justify-between gap-4">
        <p class="font-mono text-xs text-text-dim uppercase tracking-wider">
          <span class="text-accent">></span> Personal Archive System
        </p>
        <p class="font-mono text-xs text-text-dim">
          {new Date().getFullYear()}
        </p>
      </div>
    </footer>
  </body>
</html>

<style is:global>
  @import '../styles/global.css';
</style>
