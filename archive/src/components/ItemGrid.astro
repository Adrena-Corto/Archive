---
import type { Item } from '../lib/items';
import ItemCard from './ItemCard.astro';

interface Props {
  items: Item[];
  columns?: 2 | 3 | 4;
}

const { items, columns = 3 } = Astro.props;

const gridCols = {
  2: 'grid-cols-1 sm:grid-cols-2',
  3: 'grid-cols-1 sm:grid-cols-2 lg:grid-cols-3',
  4: 'grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4',
};
---

<div class={`grid ${gridCols[columns]} gap-8`} id="item-grid">
  {items.map((item) => (
    <ItemCard item={item} />
  ))}
</div>

{items.length === 0 && (
  <div class="text-center py-20">
    <p class="font-mono text-text-dim text-lg">// No items found</p>
  </div>
)}
