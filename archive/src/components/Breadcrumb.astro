---
interface BreadcrumbItem {
  label: string;
  href?: string;
}

interface Props {
  items: BreadcrumbItem[];
}

const { items } = Astro.props;
const base = import.meta.env.BASE_URL;

function url(path: string): string {
  return `${base}${path}`.replace(/\/+/g, '/');
}
---

<nav aria-label="Breadcrumb" class="mb-6">
  <ol class="flex items-center gap-2 font-mono text-xs uppercase tracking-wider">
    <li>
      <a href={url('/')} class="text-text-dim hover:text-accent transition-colors">
        <span class="text-accent">//</span> Archive
      </a>
    </li>
    {items.map((item, index) => (
      <li class="flex items-center gap-2">
        <span class="text-text-dim">/</span>
        {item.href ? (
          <a href={item.href} class="text-text-dim hover:text-accent transition-colors">
            {item.label}
          </a>
        ) : (
          <span class="text-text-muted">{item.label}</span>
        )}
      </li>
    ))}
  </ol>
</nav>
